.modal.hide(id="_modal", tabindex="-1", role="dialog", aria-labelledby="modal dialog", aria-hidden="true")
  .modal-header
    button.close(data-dismiss="modal") &times;
    h3(id="_modalHeader")
  .modal-body
    p(id="_modalBody")
  .modal-footer
    button.btn(data-dismiss="modal", aria-hidden="true") Close
    button.btn.btn-primary(id="_modalPrimaryButton") Appear
